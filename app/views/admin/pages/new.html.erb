<h1>New Page</h1>
<turbo-frame id="page-form">
  <%= form_with(model: @page, url: admin_pages_path, method: :post) do |form| %>
    <legend>Page Form</legend>

    <div class="field">
      <%= form.label :url %>
      <%= form.text_field :url %>
    </div>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="field">
      <%= form.label :published_at %>
      <%= form.datetime_local_field :published_at %>
    </div>

    <div class="actions">
      <%= form.submit "Submit" %>
    </div>
  <% end %>
</turbo-frame>
