          <li><%= link_to 'Sign In', new_user_credential_session_path %></li>
        </ol>
      </nav>
    </div>
    <%# TODO: Required for Devise. Figure out a better way to show flash than this... %>
    <p class="notice bg-yellow-200 text-black"><%= notice %></p>
    <p class="alert bg-red-300 text-white font-bold"><%= alert %></p>
    <%= yield %>
  </body>
</html>
